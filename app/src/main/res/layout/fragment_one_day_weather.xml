<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:id="@+id/card_view_one_day"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/today_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/today"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/picture_temperature_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/today_text"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/temperature_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_temperature_today"
            android:layout_alignTop="@+id/picture_temperature_today"
            android:layout_below="@+id/today_text"
            android:layout_marginStart="26dp"
            android:textSize="48sp" />


        <ImageView
            android:id="@+id/picture_wind_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/picture_temperature_today"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/wind_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_wind_today"
            android:layout_alignTop="@+id/picture_wind_today"
            android:layout_below="@+id/temperature_today"
            android:layout_marginStart="26dp"
            android:textSize="48sp" />


        <ImageView
            android:id="@+id/picture_pressure_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/picture_wind_today"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/pressure_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_pressure_today"
            android:layout_alignTop="@+id/picture_pressure_today"
            android:layout_below="@+id/temperature_today"
            android:layout_marginStart="26dp"
            android:textSize="48sp" />


        <ImageView
            android:id="@+id/picture_humidity_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/picture_pressure_today"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/humidity_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_humidity_today"
            android:layout_alignTop="@+id/picture_humidity_today"
            android:layout_below="@+id/temperature_today"
            android:layout_marginStart="26dp"
            android:textSize="48sp" />



    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/picture_info"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_info"
            android:layout_toRightOf="@+id/picture_info"
            android:layout_alignParentTop="true"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperature_info"
            android:layout_toRightOf="@+id/picture_info"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/date_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wind_info"
            android:layout_toRightOf="@+id/picture_info"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/temperature_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pressure_info"
            android:layout_toRightOf="@+id/picture_info"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/wind_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humidity_info"
            android:layout_toRightOf="@+id/picture_info"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/pressure_info" />

    </RelativeLayout>

</android.support.v7.widget.CardView>